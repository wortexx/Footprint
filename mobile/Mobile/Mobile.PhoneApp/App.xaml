<Application 
    x:Class="Mobile.PhoneApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"       
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:ViewModel="clr-namespace:Mobile.PhoneApp.ViewModel"
    xmlns:Converters="clr-namespace:Mobile.PhoneApp.Converters">

    <!--Application Resources-->
    <Application.Resources>
        <ViewModel:MainViewModel x:Key="MainViewModel"/>
        
<!--        Converters-->
        <Converters:BoolToTextConverter x:Key="TurnTrackingButtonConverter" TrueText="Turn off tracking" FalseText="Turn on tracking"/>
<!--        /Converters-->
    </Application.Resources>

    <Application.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService 
            Launching="Application_Launching" Closing="Application_Closing" 
            Activated="Application_Activated" Deactivated="Application_Deactivated"/>
    </Application.ApplicationLifetimeObjects>

</Application>