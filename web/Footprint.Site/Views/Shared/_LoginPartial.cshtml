@if (Request.IsAuthenticated)
{
    <text>
        <li>
            @Html.ActionLink(String.Format("Welcome, {0}.",User.Identity.Name), "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })
        </li>
        <li>
            <a href="javascript:document.getElementById('logoutForm').submit()" onclick="$('#logoff').click();">LogOff</a>
        </li>
    </text>
}
else
{
    <li>
        @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
    </li>
    <li>
        @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
    </li>
}

@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
            @Html.AntiForgeryToken()
}