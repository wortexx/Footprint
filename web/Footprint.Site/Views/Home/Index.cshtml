@model Footprint.Site.Models.Consumer
@using LocalResources = Footprint.Site.Properties.Resources

@{
    ViewBag.Title = "";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span2">
            <!--Body content-->
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Consumer</th>
                        <th>Usage</th>
                        <th>Norm</th>
                        <th>%</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Statistic.Count; ++i )
                    {
                        <text>
                            <tr>
                                <td>@(String.Format("{0}", i))</td>
                                <td><b>@Model.Statistic[i].Consumer</b></td>
                                <td>@(String.Format("{0}", @Model.Statistic[i].Usage)) </td>
                                <td>@(String.Format("{0}", @Model.Statistic[i].Norm)) </td>
                                <td>@(String.Format("{0:##.##}%",Math.Round(Model.Statistic[i].Usage / Model.Total * 100,2)))</td>
                                <td><img src="@(@Model.Statistic[i].IsEffective ? Url.Content("/Images/Green-Leaf-32.png"): Url.Content("/Images/Black-Leaf-32.png"))" /></td>
                            </tr>
                        </text>
                    }
                </tbody>
            </table>
        </div>

        <div class="span10">
            <!--Sidebar content-->
            @Html.Partial("_TreeEconomy")
        </div>

    </div>
</div>