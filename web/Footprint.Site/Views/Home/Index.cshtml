@model Footprint.Site.Models.Consumer
@using LocalResources = Footprint.Site.Properties.Resources

@{
    ViewBag.Title = "";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span2">
            <!--Body content-->
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="white-space: nowrap;">#</th>
                        <th style="white-space: nowrap;">Consumer</th>
                        <th style="white-space: nowrap;">Norm</th>
                        <th style="white-space: nowrap;">Daily Usage</th>
                        <th style="white-space: nowrap;">Total Usage</th>
                        <th style="white-space: nowrap;">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Statistic.Count; ++i )
                    {
                        <text>
                            <tr>
                                <td style="white-space: nowrap;"><i class="icon-ok-circle"></i></td>
                                <td style="white-space: nowrap;"><b>@Model.Statistic[i].Consumer</b></td>
                                <td style="white-space: nowrap;">@(String.Format("{0}", @Model.Statistic[i].Norm)) </td>
                                <td style="white-space: nowrap;">@(String.Format("{0:##.##}",Math.Round(@Model.Statistic[i].Usage)))</td>
                                <td style="white-space: nowrap;">@(String.Format("{0:##.##}",Math.Round(@Model.Statistic[i].TotalUsage)))</td>
                                <td style="white-space: nowrap;"><img src="@(@Model.Statistic[i].IsEffective ? Url.Content("/Images/Green-Leaf-32.png"): Url.Content("/Images/Black-Leaf-32.png"))" /></td>
                            </tr>
                        </text>
                    }
                </tbody>
            </table>
        </div>

        <div class="span10">
            <!--Sidebar content-->
            @Html.Partial("_TreeEconomy")
        </div>

    </div>
</div>